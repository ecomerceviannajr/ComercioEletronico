@model IEnumerable<NHibernateComercio.DataBase.Models.Produtora>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   @*@Html.ActionLink("Criar", "CriarProdutora")*@
    <a href="@Url.Action("CriarProdutora","Produtora")" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> Novo</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @*@Html.ActionLink("Editar", "Edit", new { id=item.Id })*@
            <a href="@Url.Action("AlterarProdutora","Produtora", new { id=item.Id })" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i> Editar</a> 
            @*@Html.ActionLink("Detalhes", "Details", new { id=item.Id })*@
            <a href="@Url.Action("DetalhesProdutora","Produtora",new { id=item.Id })" class="btn btn-success"><i class="glyphicon glyphicon-comment"></i> Detalhes</a> 
            @*@Html.ActionLink("Apagar", "Delete", new { id=item.Id })*@
            <a href="@Url.Action("ApagarProdutora","Produtora", new { id=item.Id })" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Apagar</a>
        </td>
    </tr>
}

</table>
