@model NHibernateComercio.DataBase.Models.Produto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Preco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preco)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataLancamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataLancamento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Peso)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Peso)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>
    <hr/>

    <a href="@Url.Action("InsereFoto", new { idProduto = Model.Id })" class="btn btn-primary"><i class="glyphicon glyphicon-phone"></i>Incluir</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>FileName</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fot in Model.Fotos)
            {
                <tr>
                    <td><img src="@fot.FileName" height="100px" width="100px" /> </td>
                    <td>
                        <a href="@Url.Action("DropFoto", new { id = fot.Id})" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>Apagar
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
<p>
