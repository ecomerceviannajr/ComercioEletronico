@model IEnumerable<NHibernateComercio.DataBase.Models.Produto>

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<p>
    <a href="@Url.Action("Index","Produto")" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> Novo</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataLancamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataLancamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Peso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @*@Html.ActionLink("Editar", "Edit", new { id=item.Id })*@
            <a href="@Url.Action("Edit","Produto", new { id=item.Id })" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i> Editar</a>
            @*@Html.ActionLink("Detalhes", "Details", new { id=item.Id })*@
            <a href="@Url.Action("Details","Produto",new { id=item.Id })" class="btn btn-success"><i class="glyphicon glyphicon-comment"></i> Detalhes</a>
            @*@Html.ActionLink("Apagar", "Delete", new { id=item.Id })*@
            <a href="@Url.Action("Delete","Produto", new { id=item.Id })" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Apagar</a>
        </td>
    </tr>
}

</table>
